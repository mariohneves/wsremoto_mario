package decisao;

import javax.swing.JOptionPane;

public class Exercicio {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		String cliente = JOptionPane.showInputDialog("Cliente");
		
		byte diarias = Byte.parseByte(JOptionPane.showInputDialog("Quantidade de Diárias"));
		if (diarias<15) {
			int conta = 80 +(8 * (short) diarias);
			System.out.println(cliente + " Sua conta é R$" + conta);
		}else if (diarias==15) {
			int conta = 80 +(6 * (short) diarias);
			System.out.println(cliente + " Sua conta é R$" + conta);
			
		}else if (diarias>15) {
			float conta = 80 +(5.5 * (float) diarias);
			System.out.println(cliente + " Sua conta é R$" + conta);
			
		}
		
		
		
		
		
		
		
		

				
				
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	}

}
