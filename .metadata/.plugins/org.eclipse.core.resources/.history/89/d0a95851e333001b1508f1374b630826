package decisao;

import javax.swing.JOptionPane;

public class Exercicio {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		String cliente = JOptionPane.showInputDialog("Cliente");
		byte diarias = Byte.parseByte(JOptionPane.showInputDialog("Quantidade de Diárias"));
		float taxa	= Float.parseFloat(JOptionPane.showInputDialog("Taxa de serviço"));
		if (diarias<15) {
			System.out.println(taxa + "8.00");
		}else if (diarias==15) {
			System.out.println(taxa + "6.00" );
		}else {
			System.out.println(taxa + "5.50");
		}
		
		
		
		float conta = (80 + taxa)*diarias;
		

				
				
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	}

}
