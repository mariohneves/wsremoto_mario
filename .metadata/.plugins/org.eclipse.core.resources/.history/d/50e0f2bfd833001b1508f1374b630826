package decisao;

import javax.swing.JOptionPane;

public class DesafioDecisaoSimples {

	public static void main(String[] args) {
		// 
		/*
		 * Solicita o nome e a idade de uma pessoa.
		 * sua aplicação deve informar se:
		 * Ela é obrigada a votar
		 * ela está proibida de voltar
		 * o voto é facultativo
		 */


		String eleitor = JOptionPane.showInputDialog("Eleitor").toUpperCase();
		short idade= Short.parseShort(JOptionPane.showInputDialog("Idade"));
		
		if (idade>=18 && idade<70) {
			System.out.println(eleitor + " Você é obrigado a votar");
		}
		if (idade<16) {
			System.out.println(eleitor + " Você ainda não pode votar");
		}
		
		if (idade>70 || (idade>=16 && idade<18)) {
			System.out.println(eleitor + " Seu voto é facultativo");
		}
		
		
		
		
		
		
		
	}

}
