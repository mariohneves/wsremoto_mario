package repeticao;

import javax.swing.JOptionPane;

public class Slide77Exercicio4 {

	public static void main(String[] args) {
		//

		short cont = 0;
		short idade = 0;
		String nome = "0";
		short total = (short) 0;
		short idadetotal = (short) 0;
		

		do {
			nome = JOptionPane.showInputDialog("Digite seu nome:");
			idade = Short.parseShort(JOptionPane.showInputDialog("Digite sua idade"));
			
			
			idadetotal = (short) (idade + idadetotal);
			 System.out.println(idadetotal);
			
			total++;
			
			if (idade < 18) {
				cont++;
				System.out.println("A quantidade de pessoas menores de idade é : " + cont);
			   }

		} while (JOptionPane.showConfirmDialog(null, "Deseja Continuar?", "Pergunta", JOptionPane.YES_NO_OPTION) == 0);
			
		short media = idadetotal / total;
		 System.out.println(media);
		

	}

}
