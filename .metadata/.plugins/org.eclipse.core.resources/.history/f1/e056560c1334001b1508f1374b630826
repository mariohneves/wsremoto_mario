package repeticao;

import javax.swing.JOptionPane;

public class DesafioDo {

	public static void main(String[] args) {
		// 
		/*
		 * Game = adivinhação
		 * Jogador 1 : digita um número inteiro
		 * Jogador 2: vai ter que acertar o numero
		 * Quando acertar, mostra Parabéns
		 * 
		 * Plus:
		 * - Implemente uma ajuda da sua aplicação. Se o jogador estiver chutando alto falar que é mais baixo
		 * 
		 * Quando o jogador 2 acertar, mostrar a quantidade de tentativas
		 */

		
		short jogador1 = 0;
		short jogador2 = 0;
		
		do {
			
		
			jogador1 = Short.parseShort(JOptionPane.showInputDialog("Escolha um número"));
			jogador2 = Short.parseShort(JOptionPane.showInputDialog(
					"Adivinhe o número escolhido pelo jogador 1"));
			
			
		}while (jogador1!=jogador2 && jogador1<jogador2) {
			JOptionPane.showMessageDialog(null,  "Jogador 2 tente novamente com números menores ");
		}while (jogador1 > jogador2) {
			JOptionPane.showMessageDialog(null,  "Jogador 2 tente novamente com números maiores ");
		}
			
			
		
		
			
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	}
	

}
